<Window x:Class="OtagujPlikiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OtagujPlikiApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Grid Height="521" VerticalAlignment="Top" Margin="0,0,0,-2">
        <Label x:Name="title" Content="Otaguj Pliki!" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="122" Height="32" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="Ścieżka" HorizontalAlignment="Left" Margin="36,118,0,0" VerticalAlignment="Top" Width="96" Height="35"/>
        <Label Content="Typ" HorizontalAlignment="Left" Margin="36,174,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.079,0.846" Height="35" Width="96"/>
        <TextBox x:Name="_path" HorizontalAlignment="Left" Height="35" Margin="196,118,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="166"/>
        <TextBox x:Name="_type" HorizontalAlignment="Left" Height="35" Margin="196,174,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="166"/>
        <Button x:Name="_search" Content="Szukaj" HorizontalAlignment="Left" Margin="36,290,0,0" VerticalAlignment="Top" Width="162" Height="35" Click="Click_search"/>
        <ListBox x:Name="_results" HorizontalAlignment="Left" Height="153" Margin="36,349,0,-28" VerticalAlignment="Top" Width="326"/>
        <Label Content="Wybierz dysk" HorizontalAlignment="Left" Margin="36,63,0,0" VerticalAlignment="Top" Width="96" Height="35"/>
        <TextBox HorizontalAlignment="Left" Height="35" Margin="196,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <Button x:Name="_open" Content="Otwórz" HorizontalAlignment="Left" Margin="203,290,0,0" VerticalAlignment="Top" Width="159" Height="35" Click="Click_open"/>
        <Label Content="Nazwa/Tag" HorizontalAlignment="Left" Margin="36,233,0,0" VerticalAlignment="Top" Width="96" Height="35"/>
        <TextBox x:Name="_name" HorizontalAlignment="Left" Height="35" Margin="196,233,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <Label Content="Wybierz plik" HorizontalAlignment="Left" Margin="510,63,0,0" VerticalAlignment="Top" Height="35" Width="120"/>
        <Button x:Name="_view" Content="Przeglądaj" HorizontalAlignment="Left" Margin="510,118,0,0" VerticalAlignment="Top" Width="164" Height="26" Click="Click_view"/>
        <Label Content="Dodaj tag" HorizontalAlignment="Left" Margin="510,165,0,0" VerticalAlignment="Top" Width="120" Height="32"/>
        <TextBox x:Name="_addTag" HorizontalAlignment="Left" Height="35" Margin="510,211,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164"/>
        <Button x:Name="_save" Content="Zapisz" HorizontalAlignment="Left" Margin="510,323,0,0" VerticalAlignment="Top" Width="75" Height="31"/>
        <Button x:Name="_del" Content="Usuń" HorizontalAlignment="Left" Margin="599,323,0,0" VerticalAlignment="Top" Width="75" Height="31"/>
        <Button x:Name="_add" Content="Dodaj" HorizontalAlignment="Left" Margin="510,270,0,0" VerticalAlignment="Top" Width="164" Height="30"/>
        <Label Content="Plik z zapisanymi tagami" HorizontalAlignment="Left" Margin="510,412,0,0" VerticalAlignment="Top" Height="34" Width="164"/>

    </Grid>
</Window>
